{
  "name": "sonic-agent.com",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "Dusan Brankov <dusanbrankov@proton.me>",
  "main": "index.html",
  "scripts": {
    "watch:sass": "sass --no-source-map --watch src/assets/sass/index.scss:dist/assets/css/styles.css",
    "watch:eleventy": "eleventy --serve",
    "build:sass": "sass --no-source-map src/assets/sass/index.scss:dist/assets/css/styles.css",
    "build:eleventy": "eleventy",
    "custom:rm-dist": "test -d 'dist/' && rm -r dist/",
    "custom:add-dist": "mkdir -p dist/",
    "start": "npm run custom:rm-dist && npm-run-all build:sass --parallel watch:*",
    "build": "npm run custom:add-dist && npm-run-all build:*",
    "postbuild": "postcss dist/assets/css/styles.css -u autoprefixer cssnano -r --no-map"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.2%"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@sindresorhus/slugify": "^2.2.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^5.1.14",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "sass": "^1.57.1"
  }
}
