---
layout: "base.njk"
---

<header class="page-header">
  <div class="wrapper">
    <div class="page-header__text">
      <h1 class="page-header__title">{{ title }}</h1>
      <p class="page-header__summary">{{ description }}</p>
    </div>
    <picture class="page-header__img">
      <source srcset="/assets/img/{{ image }}.avif" type="image/avif">
      <source srcset="/assets/img/{{ image }}.webp" type="image/webp">
      <img src="/assets/img/{{ image }}.jpg" alt="">
    </picture>
  </div>
</header>

<div class="products region">
  <div class="wrapper">

    <nav class="breadcrumbs">
      <ol class="bare-list">
        <li><a href="/">Home</a></li>
        <li><a href="#0">Rental</a></li>
        <li><a href="#0">{{ eleventyNavigation.parent }}</a></li>
        {% if package %}
          <li>{{ package }}</li>
        {% else %}
          <li>{{ title }}</li>
        {% endif %}
      </ol>
    </nav>

    <div class="products__list">
      {{ content | safe }}
    </div>
      
    <div class="promo">
      <h2 class="promo__title">Get a customized offer</h2>
      <p class="promo__p">Get in touch with us today to see for yourself how our <strong>dependable</strong> and <strong>professional</strong> team can help ensure your event to be both <strong>seamless</strong> and <strong>memorable</strong>.</p>
      <a href="#0" class="promo__link">Contact us</a>
    </div>

  </div>
</div>