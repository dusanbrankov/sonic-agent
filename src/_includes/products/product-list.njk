<div class="products region">
  <div class="wrapper">

    <nav class="breadcrumbs">
      <ol class="bare-list">
        <li><a href="/">Home</a></li>
        <li><a href="#0">Rental</a></li>
        <li><a href="#0">{{ eleventyNavigation.parent }}</a></li>
        <li>{{ package }}</li>
      </ol>
    </nav>

    <div class="products__list">
      {% for product in collections.products %}
      <article class="card">
        <picture class="card__img">
          <source srcset="/assets/img/{{ product.data.thumbnail }}.avif" type="image/avif">
          <source srcset="/assets/img/{{ product.data.thumbnail }}.webp" type="image/webp">
          <img src="/assets/img/{{ product.data.thumbnail }}.jpg" alt="">
        </picture>

        <div class="card__content">
          <h2 class="card__title">{{ product.data.title }}</h2>
          <ul class="card__list bare-list">
            {% for item in product.data.list %}
            <li><span>{{ item }}</span></li>
            {% endfor %}
          </ul>
        </div>
        <div class="card__link">
          <p class="card__price">{{ product.data.price }} <span>/ day</span></p>
          <a href="{{ product.url }}" class="card__link">View Details</a>
        </div>

      </article>
      {% endfor %}
    </div>
      {% include 'products/contact.njk' %}
  </div>
</div>